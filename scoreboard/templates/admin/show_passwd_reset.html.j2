{% extends "/admin/admin_layout.html.j2" %}

{% block nav %}
	{% include "admin/nav_admin.html.j2" with context %}
{% endblock nav %}

{% block main %}

<div id="page_body" class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="page-header tournament-header">
			<h1 class="tournament-title">Password Reset</h1>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
		{% with messages = get_flashed_messages() -%}
			{% if messages %}
				{% set last="" -%}
				<div class="alert alert-danger" role="alert">
				{% for message in messages %}
					{% if message != last -%}
						{{ message }}</br>
					{%- endif %}
					{% set last=message %}
				{% endfor %}
				</div>
			{% endif %}
		{%- endwith %}
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<div class="well">
				<p>Password has been reset for {{ user.email }}</p>

				<p><a href="/login/reset?token={{token}}">https://uwhscores.com/login/reset?token={{token}}</a></p>
			</div>
		</div>
	</div>
</div>
{% endblock main %}
