{% extends "/admin/admin_layout.html.j2" %}

{% block nav %}
	{% include "admin/nav_admin.html.j2" with context %}
{% endblock nav %}

{% block main %}

<script>
jQuery(document).ready(function($) {
	$(".clickableRow").click(function() {
		window.document.location = $(this).attr("href");
	});

	$('#toggleComplete').click(function (event) {
		me = document.getElementById("toggleComplete");
		var rows = $('#games tr:not(:first)');

		if (me.value == "off"){
			me.className = "btn btn-default";
			me.value="on";
			document.getElementById("toggleComplete-glyph").className = "glyphicon glyphicon-plus";

			var played = rows.filter('.unplayed').show();
			rows.not( played ).hide();
		} else if (me.value == "on") {
			me.className = "btn btn-primary";
			me.value="off";
			document.getElementById("toggleComplete-glyph").className = "glyphicon glyphicon-ok";

			rows.show();
		}
	});

});
</script>
<div id="page_body" class="container">
	<div class="page-header tournament-header">
		<h1 class="tournament-title">Update scores for {{ tournament.name }}</h1>
	</div>
	{% with messages = get_flashed_messages() -%}
		{% if messages %}
			{% set last="" -%}
			<div class="alert alert-danger" role="alert">
			{% for message in messages %}
				{% if message != last -%}
				{{ message }}</br>
				{%- endif %}
				{% set last=message %}
			{% endfor %}
			</div>
		{% endif %}
	{%- endwith %}
	<div class="alert alert-info" role="alert">
		<p>To update a game, simply click on the row. Scores for games without both teams identified cannot be entered.</p>
		<p>Completed games are hidden by default, click the Show Completed button bellow to see completed games</p>
	</div>

	<button id="toggleComplete" type="button" class="btn btn-default" value="on">
		<span id="toggleComplete-glyph" class="glyphicon glyphicon-plus" aria-hidden="true"></span> Show Completed
	</button>

	<table id=games class="table table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Start</th>
				<th>Pool</th>
				<th>White</th>
				<th></th>
				<th>Black</th>
				<th></th>

			</tr>
		</thead>
		<tbody>

		{% for game in games -%}
			{% if (game.black_tid < 0) or (game.white_tid < 0) -%}
			<tr class="unplayed">
			{% else %}
				{% if game.score_b != "--" -%}
				<tr class='clickableRow played' style="display: none" href="{{request.base_url}}/{{game.gid}}">
				{% else %}
				<tr class='clickableRow unplayed' href="{{request.base_url}}/{{game.gid}}">
				{%- endif %}
			{%- endif %}
				<td>{{ game.gid }}</td>
				<td>{{ game.day }} {{ game.start_time }}</td>
				<td class="border-right">{{ game.pool }}</td>
				<td class={{game.style_w}}>{{ game.white }} <strong>{{ game.note_w }}</strong></td>
				<td>{{game.score_w}}</td>
				<td class={{game.style_b}}>{{ game.black }} <strong>{{ game.note_b }}</stron></td>
				<td>{{game.score_b}}</td>
			</tr>
		{%- endfor %}
		</tbody>
	</table>
</div>
{% endblock main %}
