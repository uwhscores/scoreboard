{% extends "/admin/common/admin_layout.html.j2" %}

{% block nav %}
	{% include "admin/common/admin_nav.html.j2" with context %}
{% endblock nav %}

{% block main %}

<!-- Page Content -->
<div class="container-md">
  <div class="row justify-content-md-center mt-2">
    <div class="col-md-4 justify-content-center">
      <img class="mb-4" src="/static/images/logo.png" alt="" width="324" height="128">
    {%- if message -%}
      <div class="alert alert-secondary" role="alert">
          <p>{{ message }}</p>
      </div>
    {%- endif -%}
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-4">
      <form class="mb-3" action="/login/forgot" method="post" name="login">
        <h1 class="h3 mb-3 fw-normal">Request Password Reset Link</h1>
        <label for="inputEmail" class="visually-hidden">Email address</label>
        <input type="email" id="email" name="email" autocomplete="username" class="form-control mb-3" placeholder="Email address" required autofocus>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Request Reset Link</button>
      </form>
    </div>
  </div>
</div>
<!-- /.container -->

{% endblock main %}
