{% extends "/admin/admin_layout.html.j2" %}

{% block nav %}
	{% include "admin/nav_admin.html.j2" with context %}
{% endblock nav %}

{% block main %}

<div id="page_body" class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="page-header tournament-header">
			<h1 class="tournament-title">Admin Panel Home<span class="label label-default pull-right">{{ user.short_name }}</span></h1>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
		{% with messages = get_flashed_messages() -%}
			{% if messages %}
				{% set last="" -%}
				<div class="alert alert-danger" role="alert">
				{% for message in messages %}
					{% if message != last -%}
						{{ message }}</br>
					{%- endif %}
					{% set last=message %}
				{% endfor %}
				</div>
			{% endif %}
		{%- endwith %}
		</div>
	</div>

	<div class="row">
		<div class="col-lg-8">
			<h3>Tournaments</h3>
			{% if not tournaments -%}
			<div class="well well-lg">
				There are currently no active tournaments
			</div>
			{% else %}
			<ul class="list-group">
				{% for t in tournaments -%}
				<li class="list-group-item">
					<h3>{{ t.name }}</h3> <p>{{ t.location }} {{ t.date_string}}</p>
					<a class="btn btn-primary btn-md" href="/admin/t/{{t.short_name}}/scores" role="button">Update Scores</a>
					<a class="btn btn-primary btn-md" href="/admin/t/{{t.short_name}}" role="button">Manage Tournament</a>
				</li>
				{% endfor %}
			</ul>
			{%- endif %}
		</div>

		<div class="col-lg-4">
			<h3>Admin Functions</h3>
			<div class="list-group">
				{% if user.site_admin -%}
				<a class="list-group-item" href="/admin/users"><h4><i class="fa fa-fw fa-users"></i>  Users Admin</h4></a>
				{% else %}
				<a class="list-group-item disabled"><h4><i class="fa fa-fw fa-users"></i>  Users Admin</h4></a>
				{%- endif %}
			</div>
		</div>
	</div>
</div>
{% endblock main %}
